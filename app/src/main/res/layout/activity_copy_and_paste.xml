<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.yangyang.loginapp.CopyAndPaste">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/copy_data"
            android:text="Copy Data"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="copyData"/>

        <EditText
            android:id="@+id/copy_message_input"
            android:padding="5dp"
            android:hint="@string/copy_message"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/paste_url"
            android:text="Paste Data"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="pastedData"/>
        
        <EditText
            android:id="@+id/pasted_url_input"
            android:padding="5dp"
            android:hint="@string/pasted_message"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/copy_url"
            android:text="Copy Url"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="copyUrl"/>

        <EditText
            android:id="@+id/copy_url_input"
            android:padding="5dp"
            android:hint="@string/copy_message"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/paste_data"
            android:text="Paste Url"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="pasteUrl"/>

        <EditText
            android:id="@+id/pasted_message_input"
            android:padding="5dp"
            android:hint="@string/pasted_message"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/copy_intent"
            android:text="Copy Intent"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="copyIntent"/>

        <EditText
            android:id="@+id/copy_intent_input"
            android:padding="5dp"
            android:hint="@string/copy_message"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/paste_intent"
            android:text="Paste intent"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="pasteIntent"/>

        <EditText
            android:id="@+id/pasted_intent_input"
            android:padding="5dp"
            android:hint="@string/pasted_message"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>



</LinearLayout>
