<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.yangyang.loginapp.CopyAndPaste">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/copy_data"
            android:text="Copy Data"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="50dp"
            android:onClick="CopyAndPastData"/>

        <EditText
            android:id="@+id/copy_message_input"
            android:padding="5dp"
            android:hint="@string/copy_message"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/paste_data"
            android:text="Paste Data"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="50dp"
            android:onClick="CopyAndPastData"/>
        
        <EditText
            android:id="@+id/pasted_message_input"
            android:padding="5dp"
            android:hint="@string/pasted_message"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>

</LinearLayout>
