<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yangyang.loginapp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.yangyang.loginapp.MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
            <activity
               android:name=".FragmentActivity"
               android:label="@string/app_name" >
               <intent-filter>
                  <action android:name="android.intent.action.MAIN" />
                  <category android:name="android.intent.category.LAUNCHER" />
               </intent-filter>
            </activity>
        -->
        <activity
            android:name="com.example.yangyang.loginapp.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.yangyang.loginapp.LoginSuccess"
            android:label="@string/title_activity_login_success" >
        </activity>
        <activity
            android:name="com.example.yangyang.loginapp.RegisterSuccess"
            android:label="@string/title_activity_register_success" >
        </activity>
        <activity
            android:name="com.example.yangyang.loginapp.PopListView"
            android:label="@string/title_activity_list_view" >
        </activity>
        <activity
            android:name="com.example.yangyang.loginapp.FragmentActivity"
            android:label="@string/title_activity_fragment"
            android:parentActivityName="com.example.yangyang.loginapp.MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MyActivity" />
        </activity>
        <activity
            android:name="com.example.yangyang.loginapp.DragAndDrop"
            android:label="@string/title_activity_drag_and_drop" >
        </activity>
        <activity
            android:name="com.example.yangyang.loginapp.CopyAndPaste"
            android:label="@string/title_activity_copy_and_paste" >
        </activity>
        <activity
            android:name="com.example.yangyang.loginapp.ime"
            android:label="@string/title_activity_ime" >
        </activity>
        <activity
            android:name="com.example.yangyang.loginapp.ShowAnimation"
            android:label="@string/title_activity_show_animation" >
        </activity>
        <activity
            android:name="com.example.yangyang.loginapp.SearchActicity"
            android:label="@string/title_activity_search_acticity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.example.yangyang.loginapp.Gson"
            android:label="@string/title_activity_gson" >
        </activity>
    </application>

</manifest>
